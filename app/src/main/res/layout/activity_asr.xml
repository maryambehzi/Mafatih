<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".asrActivity">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/asrtitle"
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="163dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="163dp"
                android:layout_marginBottom="476dp"
                android:text="تعقیبات نماز عصر" />


            <TextView
                android:id="@+id/asrtxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="1in"
                android:text=" " />

            <Button
                android:id="@+id/asrnext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/asrtxt"
                android:layout_marginTop="300dp"
                android:text="بعدی" />

            <Button
                android:id="@+id/asrpre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/asrtxt"
                android:layout_marginTop="250dp"
                android:text="قبلی"

                />

            <Button
                android:id="@+id/asrback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/asrnext"
                android:text="بازگشت"


                />
        </RelativeLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>